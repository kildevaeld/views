{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib"
    },
    "filesGlob": [
        "./src/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./src/baseview.ts",
        "./src/events.ts",
        "./src/index.ts",
        "./src/object.ts",
        "./src/templateview.ts",
        "./src/utils.ts",
        "./src/view.ts"
    ]
}
