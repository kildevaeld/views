{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib"
    },
    "filesGlob": [
        "./src/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./src/baseview.ts",
        "./src/collection-view.ts",
        "./src/data-view.ts", 
        "./src/index.ts",
        "./src/layout-view.ts",
        "./src/model.ts",
        "./src/object.ts",
        "./src/region-manager.ts",
        "./src/region.ts",
        "./src/templateview.ts",
        "./src/types.ts",
        "./src/view.ts"
    ]
}
