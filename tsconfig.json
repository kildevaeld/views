{
    "compilerOptions": {
        "target": "es6",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./lib",
        "rootDir": "src",
        "moduleResolution": "node",
        "module": "commonjs"
    },
    "files": [

        "./src/baseview.ts",
        "./src/collection-view.ts",
        "./src/view.ts",
        "./src/index.ts",
        "./src/layout-view.ts",
      
       "./src/util.ts",
        "./src/object.ts",
        "./src/region-manager.ts",
        "./src/region.ts",
        "./src/annotations.ts",
        "./src/types.ts"
    ]
}
